root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.py]
# Docstrings and comments use max_line_length = 80
max_line_length = 81
indent_size = 4

[*.html]
# Use 2 spaces for the HTML Files
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[**/admin/js/vendor**]
indent_style = ignore
